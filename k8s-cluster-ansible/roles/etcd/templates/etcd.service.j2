
[Service]
Type=exec
ExecStart=/usr/local/bin/etcd \
  --name {{ inventory_hostname.split('.')[0] }} \
  --data-dir={{ etcd_data_dir }} \
  --cert-file={{ etcd_pki_dir }}/{{ inventory_hostname.split('.')[0] }}.crt \
  --key-file={{ etcd_pki_dir }}/{{ inventory_hostname.split('.')[0] }}.key \
  --peer-cert-file={{ etcd_pki_dir }}/{{ inventory_hostname.split('.')[0] }}.crt \
  --peer-key-file={{ etcd_pki_dir }}/{{ inventory_hostname.split('.')[0] }}.key \
  --trusted-ca-file={{ etcd_pki_dir }}/{{ etcd_ca_crt_name }} \
  --peer-trusted-ca-file={{ etcd_pki_dir }}/{{ etcd_ca_crt_name }} \
  --peer-client-cert-auth \
  --client-cert-auth \
  --initial-advertise-peer-urls https://{{ ansible_host }}:2380 \
  --listen-peer-urls https://{{ ansible_host }}:2380 \
  --listen-client-urls https://{{ ansible_host }}:2379,https://127.0.0.1:2379 \
  --advertise-client-urls https://{{ ansible_host }}:2379 \
  --initial-cluster-token {{ etcd_cluster_token }} \
  --initial-cluster {% for host in groups['etcd'] %}{{ host.split('.')[0] }}=https://{{ hostvars[host].ansible_host }}:2380{% if not loop.last %},{% endif %}{% endfor %} \
  --initial-cluster-state new 
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
